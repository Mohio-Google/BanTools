{
  "id": "bantools",
  "name": "BanTools",
  "version": "1.4.0",
  "description": "Velocity ban management plugin",
  "authors": ["NSrank & Qwen2.5-Max & Augment"],
  "main": "org.plugins.bantools.BanToolsPlugin",
  "dependencies": [
    {
      "id": "velocity",
      "version": "3.4.0"
    }
  ],
  "commands": {
    "bantools": {
      "aliases": ["bt"],
      "description": "Main command for managing ban operations",
      "usage": "/<command> reload",
      "permission": "bantools.command.reload"
    },
    "ban": {
      "description": "Ban a player by UUID/IP/username",
      "usage": "/bantools ban <type> <value>",
      "permission": "bantools.command.ban"
    },
    "unban": {
      "description": "Unban a specific player",
      "usage": "/bantools unban <player>",
      "permission": "bantools.command.unban"
    },
    "kick": {
      "description": "Kick a specific player",
      "usage": "/bantools kick <player>",
      "permission": "bantools.command.kick"
    }
  }
}